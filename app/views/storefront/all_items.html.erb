<h1>Welcome To Tech Talent Store</h1>
<p>Give us your money!</p>

<div class="row well">
	<% @products.each do |x| %>
		<div class="col-sm-6 col-md-4">
			<p><%= image_tag x.image, height: 300 %></p>
			<h3><%= link_to x.name, x %></h3>
			<p><%= number_to_currency(x.price) %></p>
			<p>
				<a href="#" data-toggle="modal" data-target="#myModal_<%= x.id %>" >
					<span class="glyphicon glyphicon-plus"></span>Quick Info
			</p>
			<div class="modal fade" id="myModal_<%= x.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal fade" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        <h4 class="modal-title" id="myModalLabel"><%= x.name %></h4>
			      </div>
			      <div class="modal-body">
			        <p><%= image_tag x.image, height: 300 %></p>
			        <p>Made by: <%= x.brand %></p>
			        <p>Rating: <%= x.rating %></p>
			        <p>Category: <%= x.category.name %></p>
			        <p>Description: <%= x.description %></p>

			      </div>
						<div class="modal-footer">
					        <button type="button" class="btn btn-default" data-dismiss="modal fade">Close</button>
	      				</div>
	    			</div>
	  			</div>
			</div>
		</div>

	<% end %>
</div>

